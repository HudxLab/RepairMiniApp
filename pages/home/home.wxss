/* pages/home/home.wxss */
.userinfo {
  display: flex;
  width: 100%;
  height: 200rpx;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
}
.userinfo .avatar-block {
  height: 200rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo .avatar-icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0 20rpx;
}
.userinfo .before-login {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo .post-login {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userinfo .post-login view {
  margin: 10rpx 0;
}