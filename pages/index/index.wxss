/**index.wxss**/
.scan {
  background-color: #ffffff;
  margin: 20rpx 0;
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.scan .scan-block {
  height: 200rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scan .scan-icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0 20rpx;
}
.scan .scan-text {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ordersinfo {
  margin: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex: 1;
  background-color: #ffffff;
}
.ordersinfo .ordersinfoheader {
  height: 68rpx;
  background-color: #333333;
  color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.ordersinfo .order-list {
  padding: 10rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  font-size: 13px;
  border-bottom: 1px solid #f3f3f3;
}
.ordersinfo .order-list .device-icon {
  width: 108rpx;
  height: 68rpx;
  margin: 0 20rpx;
}
.ordersinfo .blanklist {
  height: 100%;
  width: 100%;
  font-size: 13px;
  background-color: #f3f3f3;
  color: #333333;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}