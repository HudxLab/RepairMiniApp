/**index.wxss**/

.userinfo {
  display: flex;
  width: 100%;
  height: 200rpx;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
}
.userinfo .avatar-block {
  height: 200rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo .avatar-icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0 20rpx;
}
.userinfo .before-login {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo .post-login {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userinfo .post-login view {
  margin: 10rpx 0;
}

.scan {
  background-color: #ffffff;
  margin: 20rpx 0;
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.scan .scan-block {
  height: 200rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scan .scan-icon {
  width: 128rpx;
  height: 128rpx;
  margin: 0 20rpx;
}
.scan .scan-text {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ordersinfo {
  margin: 0;
  /* padding: 20rpx 0; */
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  flex: 1;
}
.ordersinfo .ordersinfoheader {
  height: 68rpx;
  width: 100%;
  background-color: #333333;
  color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
