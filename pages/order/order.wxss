/* pages/order/order.wxss */
.order-info {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.order-info .order-detail {
  height: 88rpx;
  border-bottom: 1px solid #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  font-size: 13px;
}
.order-action {
  margin: 40rpx 0;
  width: 100%;
}
.order-action button {
  text-align: center;
  border-radius: 0;
}
.map {
  width: 100%;
  height: 750rpx;
}