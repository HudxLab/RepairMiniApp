<!--components/dropmenu/dropmenu.wxml-->
<view class="drop-down-menu-main">
  <view bindtap="showList" class="drop-menu-header">{{title}}</view>
  <view wx:key="id" wx:if="{{!collapsed}}" wx:for="{{data}}" class="drop-menu-item">
    <text>{{item.name}}</text>
    <text>{{item.value}}</text>
  </view>
</view>
